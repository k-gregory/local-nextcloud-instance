# --- HTTP Configuration ---
<VirtualHost *:80>
    ServerName {{ nextcloud_servername }}
    {% if nextcloud_serveraliases is defined and nextcloud_serveraliases | length > 0 %}
    ServerAlias {{ nextcloud_serveraliases | join(' ') }}
    {% endif %}

    # Redirect all traffic to HTTPS
    # Note: Your Global Alias handles .well-known challenges before this kicks in
    Redirect permanent / https://{{ nextcloud_servername }}/
</VirtualHost>

# --- HTTPS Configuration ---
<VirtualHost *:443>
    DocumentRoot /var/www/nextcloud
    ServerName {{ nextcloud_servername }}
    {% if nextcloud_serveraliases is defined and nextcloud_serveraliases | length > 0 %}
    ServerAlias {{ nextcloud_serveraliases | join(' ') }}
    {% endif %}

    # SSL Key Locations
    SSLEngine on
    SSLCertificateFile /etc/letsencrypt/live/{{ letsencrypt_primary_domain }}/fullchain.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/{{ letsencrypt_primary_domain }}/privkey.pem

    <Directory /var/www/nextcloud>
        Require all granted
        AllowOverride All
        Options FollowSymLinks MultiViews

        <IfModule mod_dav.c>
            Dav off
        </IfModule>

        # Recommended Nextcloud Security Header
        <IfModule mod_headers.c>
            Header always set Strict-Transport-Security "max-age=15552000; includeSubDomains"
        </IfModule>
    </Directory>

    # Log files
    ErrorLog ${APACHE_LOG_DIR}/nextcloud_error.log
    CustomLog ${APACHE_LOG_DIR}/nextcloud_access.log combined
</VirtualHost>